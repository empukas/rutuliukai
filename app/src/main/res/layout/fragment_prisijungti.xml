<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kraputis.meginam.PrisijungtiFragment">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:text="@string/reg_title"
        android:textSize="36sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Įveskite slaptažodį"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:id="@+id/textView10"
        android:textSize="36sp"
        android:layout_below="@+id/Slapyvardis_field"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/Slaptazodis_field"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:id="@+id/Slapyvardis_field"
        android:textSize="30sp"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/Slaptazodis_field" />

    <Button
        android:text="Prisijungti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:id="@+id/button3"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_below="@+id/Slaptazodis_field"
        android:layout_centerHorizontal="true"
        android:onClick="prisijungti" />

</RelativeLayout>
