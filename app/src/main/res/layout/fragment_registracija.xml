<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kraputis.meginam.RegistracijaFragment">


    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="eng"
        app:srcCompat="@drawable/en"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView4" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="ltu"
        app:srcCompat="@drawable/lt"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:text="@string/reg_title"
        android:textSize="36sp"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:id="@+id/Slapyvardis_field"
        android:textSize="30sp" />

    <Button
        android:id="@+id/baigti_mygtukas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slaptazodis"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="Registruotis"
        android:text="@string/reg_mpatv"
        android:textSize="36sp" />

    <TextView
        android:text="slaptazodis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/slaptazodis"
        android:textSize="24sp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Slapyvardis_field"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:id="@+id/textView"
        android:textSize="24sp" />

    <Button
        android:text="Prisijungti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:id="@+id/button"
        android:textSize="24sp"
        android:layout_below="@+id/baigti_mygtukas"
        android:layout_centerHorizontal="true"
        android:onClick="prisijungimas" />

</RelativeLayout>
